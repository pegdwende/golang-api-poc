{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "echoCommand": true,
    "command": "go",
    "options": {
        "cwd": "${workspaceRoot}",
        "env": {
            "GOPATH": "${workspaceRoot}/../.."
        },
    },
    "tasks": [
        {
            "label": "run",
            "command": "run",
            "args": [
                "${workspaceRoot}/server.go"
            ],
            "group": "build",
            "type": "shell"
            // "options": {
            //     "cwd": "${workspaceFolder}"
            // }
        }
    ]
}